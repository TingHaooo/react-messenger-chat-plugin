{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": false,
    "target": "es5",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "rootDir": "./src",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
